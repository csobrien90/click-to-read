{
	"name": "Click2Read",
	"version": "0.0.1.0",
	"manifest_version": 3,
	"description": "Hold preset hotkey combination and click on any text to read it out loud",
	"permissions": ["storage"],
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"action": {
		"default_popup": "options.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["scripts/tool.js"]
		}
	]
}